{
  "name": "friendly-dev",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "dev:bg": "pm2 start 'bun run dev' --name my-app",
    "dev:log": "nohup bun run dev > bun.log 2>&1 &",
    "dev:status": "pm2 show  my-app",
    "dev:stop": "pm2 stop my-app",
    "dev:restart": "pm2 restart my-app",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@react-router/node": "7.10.1",
    "@react-router/serve": "7.10.1",
    "isbot": "^5.1.32",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "react-router": "7.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@react-router/dev": "7.10.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-devtools-json": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}