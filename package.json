{
  "name": "friendly-dev",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "react-router": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "dev:bg": "pm2 start 'bun run react-router' --name my-vercel",
    "dev:log": "nohup bun run react-router > api.log 2>&1 &",
    "dev:status": "pm2 show my-vercel",
    "dev:stop": "pm2 stop my-vercel",
    "dev:restart": "pm2 restart my-vercel",
    "json:server": "bun json-server data/db.json --port 8300",
    "json:bg": "pm2 start bun --name my-json -- run json:server",
    "json:stop": "pm2 stop my-json",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@react-router/node": "7.10.1",
    "@react-router/serve": "7.10.1",
    "framer-motion": "^12.23.25",
    "isbot": "^5.1.32",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "react-router": "7.10.1",
    "vercel": "^49.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@react-router/dev": "7.10.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "json-server": "^1.0.0-beta.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-devtools-json": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}